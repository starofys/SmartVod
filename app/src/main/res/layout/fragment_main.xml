<?xml version="1.0" encoding="utf-8"?>

<com.hhzt.vod.viewlayer.androidtvwidget.view.RelativeMainLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.hhzt.vod.viewlayer.androidtvwidget.view.LinearMainLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/layx65"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/ic_enter_up" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/layy694"
            android:orientation="horizontal">

            <com.hhzt.vod.viewlayer.androidtvwidget.leanback.recycle.RecyclerViewTV
                android:id="@+id/rcv_movie_type"
                android:layout_width="@dimen/layx365"
                android:layout_height="match_parent"
                android:focusable="true">

            </com.hhzt.vod.viewlayer.androidtvwidget.leanback.recycle.RecyclerViewTV>

            <FrameLayout
                android:id="@+id/fragment_movie_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/layx24"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="65px"
            android:layout_gravity="center_horizontal|bottom"
            android:src="@drawable/ic_enter_down" />

    </com.hhzt.vod.viewlayer.androidtvwidget.view.LinearMainLayout>
</com.hhzt.vod.viewlayer.androidtvwidget.view.RelativeMainLayout>
