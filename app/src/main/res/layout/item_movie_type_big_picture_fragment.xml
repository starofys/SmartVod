<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/layx456"
    android:layout_height="@dimen/layy694"
    android:focusableInTouchMode="true"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_movie_picture_item"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/iv_movie_label_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="gone"
        android:src="@drawable/ic_pay_lable"/>

    <TextView
        android:id="@+id/tv_movie_name_item"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:singleLine="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:textColor="@color/tv_white"
        android:background="@drawable/ic_movie_name_bacgroud"
        android:textSize="45px" />

</RelativeLayout>