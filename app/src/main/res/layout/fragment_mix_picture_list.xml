<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="horizontal">

	<com.hhzt.vod.viewlayer.androidtvwidget.view.SmoothHorizontalScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:clipChildren="false"
		android:clipToPadding="false">

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal">

			<com.hhzt.vod.viewlayer.androidtvwidget.leanback.recycle.RecyclerViewTV
				android:id="@+id/rcv_movie_big_picture"
				android:layout_width="@dimen/layx980"
				android:layout_height="@dimen/layy694"
				android:focusable="true"/>

			<com.hhzt.vod.viewlayer.androidtvwidget.leanback.recycle.RecyclerViewTV
				android:id="@+id/rcv_movie_small_picture"
				android:layout_width="wrap_content"
				android:layout_height="@dimen/layy694"
				android:layout_marginStart="@dimen/layx20"
				android:focusable="false"/>
		</LinearLayout>

	</com.hhzt.vod.viewlayer.androidtvwidget.view.SmoothHorizontalScrollView>

	<com.hhzt.vod.viewlayer.androidtvwidget.view.MainUpView
		android:id="@+id/mainUpView1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:upImageRes="@drawable/ic_select_border"/>
</RelativeLayout>